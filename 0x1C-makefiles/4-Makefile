CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.cc=.0)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
